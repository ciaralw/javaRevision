package javaRevision;

public class WeekendVacationQ {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
			WeekendVacationQ weekendVacationQ = new WeekendVacationQ();
			System.out.println(weekendVacationQ.didWeSleepIn(true, false));	
	}
	
	public boolean didWeSleepIn(boolean weekday, boolean vacation) { //method signiture
		boolean sleepIn;
		if(!weekday || vacation) {
			sleepIn = true;
		}
		else {
			sleepIn = false;
		}
		return sleepIn;
	}

}
